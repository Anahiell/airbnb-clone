{
  "ReverseProxy": {
    "Routes": {
      "user": {
        "ClusterId": "userCluster",
        "Match": {
          "Path": "/users/{**catch-all}"
        }
      },
      "product": {
        "ClusterId": "productCluster",
        "Match": {
          "Path": "/products/{**catch-all}"
        }
      },
      "order": {
        "ClusterId": "orderCluster",
        "Match": {
          "Path": "/orders/{**catch-all}"
        }
      },
      "user-swagger": {
        "ClusterId": "userCluster",
        "Match": {
          "Path": "/swagger/user/swagger.json"
        },
        "Transforms": [ { "PathRemovePrefix": "/swagger/user" } ]
      },
      "product-swagger": {
        "ClusterId": "productCluster",
        "Match": {
          "Path": "/swagger/product/swagger.json"
        },
        "Transforms": [ { "PathRemovePrefix": "/swagger/product" } ]
      },
      "order-swagger": {
        "ClusterId": "orderCluster",
        "Match": {
          "Path": "/swagger/order/swagger.json"
        },
        "Transforms": [ { "PathRemovePrefix": "/swagger/order" } ]
      }
    },
    "Clusters": {
      "userCluster": {
        "Destinations": {
          "user": {
            "Address": "http://localhost:7001/"
          }
        }
      },
      "productCluster": {
        "Destinations": {
          "product": {
            "Address": "http://localhost:7002/"
          }
        }
      },
      "orderCluster": {
        "Destinations": {
          "order": {
            "Address": "http://localhost:7003/"
          }
        }
      }
    }
  }

}
